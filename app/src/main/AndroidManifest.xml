<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zc.zby.basicframedemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.UserDaoActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.FruitsLoadMoreActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.FrescoActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.ShowFragmentActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.TinyActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.LevelLinkageActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.SwipeFinishActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.Translucent.NoTitleBar" />
    </application>

</manifest>